---
const { title } = Astro.props;
import { Icon } from "astro-icon/components";
const products = [
  {
    icon: "",
    name: "Producto 1",
  },
  {
    icon: "",
    name: "Producto 2",
  },
  {
    icon: "",
    name: "Producto 3",
  },
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-[#191919] flex justify-center">
      <div class="container flex items-center ml-40 p-3">
        <img src="/aliexpres.webp" class="h-[61px] mr-7" />

        <div class="relative">
          <input
            placeholder="Buscar..."
            class="h-10 rounded-full pl-5 outline-none pr-14 w-[600px]"
          />
          <div
            class="absolute right-1 top-[2px] bg-zinc-800 inline-block text-white rounded-2xl py-1 px-2"
          >
            <Icon name="mdi:search" class="size-6" />
          </div>
        </div>
        <div class="text-white ml-4">
          <Icon name="mdi:qrcode" class="size-8" />
        </div>
        <p class="text-white text-xs">Descarga la app <br /> de AliExpress</p>
        <div class="ml-5">
          <Icon name="flagpack:co" />
        </div>
        <p class="text-white ml-2 leading-2 text-xs">ES/ <br /><b>COP</b></p>
        <div class="text-white mt-4">
          <Icon name="mdi:chevron-down" />
        </div>
        <div class="text-4xl text-white ml-4">
          <Icon name="mdi:user-heart-outline" />
        </div>
        <p class="text-white text-sm leading-2 ml-2">
          ¡Bienvenido <br />
          <b>Indentificate / Registrate</b>
        </p>
        <div class="text-white mt-6"><Icon name="mdi:chevron-down" /></div>
        <div class="text-white text-4xl ml-2">
          <Icon name="mdi:wheel-barrow" />
        </div>
        <div>
          <div
            class="bg-white rounded-2xl w-1 ml-2 px-3 text-xs flex justify-center"
          >
            <b>0</b>
          </div>
          <div class="text-white text-sm"><b>Cesta</b></div>
        </div>
      </div>
    </div>
    <div class="bg-[#191919] flex justify-center items-center">
      <div
        class="text-white flex items-center border-[1px] relative rounded-full py-1 mb-3">
        
        <div class="mx-3"><Icon name="mdi:text" /></div>
        <a class="text-[18px] group " href="">Todas las categorias 
        <menu class="hidden group-hover:block w-full left-0 top-0 absolute bg-white rounded-t-xl rounded-b-xl text-black"> 
          <div class="text-[18px] text-center text-black rounded-full flex items-center justify-evenly pb-1 mt-1 font-semibold"><Icon name="mdi:text" /> Todas las categorias <Icon name="mdi:chevron-down" /> </div>
          <ul>
            <li class="ml-6 text-md p-1">Hogar y jardin</li>
            <li class="ml-6 text-md p-1">Cabello y pelucas</li>
            <li class="ml-6 text-md p-1">Moda hombre</li>
          </ul>
        </menu>
      </a>

        <div class="text-white mx-3"><Icon name="mdi:chevron-down" /></div>
      </div>
      <div class="text-[#FD384F] mx-4 mb-3">
        <b>+3 artículos desde US $2.99</b>
      </div>
      <div class="text-white mx-4 mb-3">SuperOfertas</div>
      <div class="text-white mx-4 mb-3">Plaza</div>
      <div class="text-white mx-4 mb-3">Nuevo</div>
      <div class="text-white mx-4 mb-3">AliExpress Business</div>
      <div class="text-white mx-4 mb-3">Hogar y jardin</div>
      <div class="text-white mx-4 mb-3">Cabello y pelucas</div>
      <div class="text-white mx-4 mb-3">Moda hombre</div>
      <div class="text-white mx-4 mb-3">Accesorios</div>
      <div class="text-white mx-4 mb-3 flex">
        Mas <div class="mt-2"><Icon name="mdi:chevron-down" /></div>
      </div>
    </div>
    <div class="bg-[url('fondo.webp')] flex">
      <div class="ml-40 mt-10 flex flex-col">
        <p class="text-white text-2xl">
          La promo termina: 28 mar, 01:59 (GMT-5)
        </p>
        <span class="text-[#FCF2BC] text-[67px] mt-12"
          ><b>Hasta -70% dto.</b></span
        >
        <p class="text-white text-xl">
          <b> Ahorra +150$ en toda la pagina con cupones</b>
        </p>
        <div
          class="flex bg-[#FCF2BC] mt-20 p-4 rounded-full justify-between mb-7"
        >
          <div class="flex">
            <img
              src="https://i.pinimg.com/736x/6c/d6/3f/6cd63f34fde432eb04bbe84f27773d53.jpg"
              alt=""
              class="size-[90px] mr-2 rounded-full border-solid border-2 border-white"
            />
            <img
              src="https://i.pinimg.com/736x/e0/fa/ac/e0faac75b98ff10f775770f69a063254.jpg"
              alt=""
              class="size-[90px] rounded-full border-solid border-2 border-white"
            />
          </div>
          <div class="text-[#FD384F]">
            <div class="text-4xl flex mr-2">
              <b class="mt-5">Comprar </b><div class="mt-6">
                <Icon name="mdi:arrow-right" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-col">
        <div>
          <div class="w-[600px] h-[600px ml-80">
            <img src="/public/promo.gif" alt="" class="" />
          </div>
          <div class="flex justify-around ml-80">
            <div class="bg-white size-36"></div>
            <div class="bg-white size-36"></div>
            <div class="bg-white size-36"></div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <div class="bg-zinc-800 flex justify-center"></div>
  <nav class="container main_menu">
    <a href="/">Inicio</a><a href="/productos">Productos</a>
  </nav>
  <div class="container product_list">
    {
      products.map((product) => (
        <div>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"
          >
            <>
              <ellipse cx="12.07" cy="7" rx="3" ry="1.71" />
              <path d="M12.07 22c4.48 0 8-2.2 8-5V7c0-2.8-3.52-5-8-5s-8 2.2-8 5v10c0 2.8 3.51 5 8 5zm0-18c3.53 0 6 1.58 6 3a2 2 0 0 1-.29.87c-.68 1-2.53 2-5 2.12h-1.39C8.88 9.83 7 8.89 6.35 7.84a2.16 2.16 0 0 1-.28-.76V7c0-1.42 2.46-3 6-3z" />
            </>
          </svg>
          {product.name}
        </div>
      ))
    }
  </div>
  <div class="container categories">Categorias</div>

  <div class="container">
    <slot />
  </div>

  <div class="container footer">ESTE ES EL FOOTER</div>
</html>

<style is:global>
  .main_menu {
    display: flex;
    height: 40px;
    background-color: #ff8d22;
  }
  .main_menu a {
    height: 100%;
    display: flex;
    padding: 0 12px;
    color: #fff;
    text-decoration: none;
    background-color: #ff9822;
  }
  .main_menu a:hover {
    background: #ff8800e0;
    transition: background 400ms ease-in-out;
  }

  .banner {
    height: 240px;
  }

  .product_list {
    display: flex;
    height: 80px;
  }
  .product_list div {
    height: 100%;
    display: flex;
    max-width: 120px;
    text-align: center;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 1px solid gray;
    border-radius: 4px;
    margin-right: 3px;
  }
  .categories {
    height: 60px;
  }
  .footer {
    height: 80px;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    font-family: system-ui, sans-serif;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
